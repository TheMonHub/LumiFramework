#---------------------------------------------------------------------------
# Project
#---------------------------------------------------------------------------
PROJECT_NAME           = "@PROJECT_NAME@"
PROJECT_NUMBER         = "@PROJECT_VERSION@"
PROJECT_BRIEF          = "@PROJECT_DESCRIPTION@"
PROJECT_LOGO           =

#---------------------------------------------------------------------------
# Output
#---------------------------------------------------------------------------
OUTPUT_DIRECTORY       = "@DOXY_OUTPUT_DIR@"
GENERATE_HTML          = YES
HTML_COLORSTYLE        = DARK
HTML_OUTPUT            = html
GENERATE_LATEX         = NO
HTML_COLORSTYLE_HUE    = 220
HTML_COLORSTYLE_SAT    = 100
HTML_COLORSTYLE_GAMMA  = 80
HTML_DYNAMIC_SECTIONS  = YES
GENERATE_TREEVIEW      = YES
FULL_PATH_NAMES        = YES
STRIP_FROM_PATH        = "@CMAKE_CURRENT_SOURCE_DIR@"
DISABLE_INDEX          = NO
FULL_SIDEBAR           = NO
HTML_EXTRA_FILES       = @CMAKE_CURRENT_SOURCE_DIR@/docs/doxygen-awesome-fragment-copy-button.js \
                        @CMAKE_CURRENT_SOURCE_DIR@/docs/doxygen-awesome-interactive-toc.js
HTML_EXTRA_STYLESHEET  = @CMAKE_CURRENT_SOURCE_DIR@/docs/doxygen-awesome.css \
                        @CMAKE_CURRENT_SOURCE_DIR@/docs/doxygen-awesome-sidebar-only.css
HTML_COPY_CLIPBOARD    = NO

#---------------------------------------------------------------------------
# Input
#---------------------------------------------------------------------------
INPUT                  = "@CMAKE_CURRENT_SOURCE_DIR@/include" \
                        "@CMAKE_CURRENT_SOURCE_DIR@/src"
FILE_PATTERNS          = *.h \
                        *.hpp \
                        *.cpp \
                        *.cxx
RECURSIVE              = YES
EXCLUDE_PATTERNS       = */tests/* \
                        */examples/* \
                        */third_party/*
EXCLUDE                = "@CMAKE_CURRENT_SOURCE_DIR@/include/Lumi/export.h" \
                         "@CMAKE_CURRENT_SOURCE_DIR@/src/lumi.cpp"
SOURCE_BROWSER         = YES
VERBATIM_HEADERS       = YES

#---------------------------------------------------------------------------
# Preprocessor
#---------------------------------------------------------------------------
ENABLE_PREPROCESSING   = YES
MACRO_EXPANSION        = YES
PREDEFINED             = LUMI_EXPORT= \
                        LUMI_NO_EXPORT= \
                        LUMI_DEPRECATED_EXPORT= \
                        LUMI_STATIC_DEFINE=

#---------------------------------------------------------------------------
# C++
#---------------------------------------------------------------------------
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = YES
EXTRACT_STATIC         = YES
HIDE_UNDOC_MEMBERS     = NO
HIDE_UNDOC_CLASSES     = NO
JAVADOC_AUTOBRIEF      = YES
INHERIT_DOCS           = YES

#---------------------------------------------------------------------------
# Warnings
#---------------------------------------------------------------------------
WARNINGS               = YES
WARN_NO_PARAMDOC       = YES
WARN_FORMAT            = "$file:$line: $text"
QUIET                  = NO

#---------------------------------------------------------------------------
# Dot
#---------------------------------------------------------------------------
HAVE_DOT               = YES
DOT_GRAPH_MAX_NODES    = 50