@PACKAGE_INIT@

set(Lumi_INCLUDE_DIRS "${PACKAGE_PREFIX_DIR}/@CMAKE_INSTALL_INCLUDEDIR@/@LUMI_VERSIONED_SUBDIR@")
set(Lumi_LIB_DIRS "${PACKAGE_PREFIX_DIR}/@CMAKE_INSTALL_LIBDIR@/@LUMI_VERSIONED_SUBDIR@")
set(Lumi_CMAKEDIR "${PACKAGE_PREFIX_DIR}/@CMAKE_INSTALL_DATADIR@/cmake/@PROJECT_NAME_LOWER_CASE@-@PROJECT_VERSION_MAJOR@.@PROJECT_VERSION_MINOR@")

include(CMakeFindDependencyMacro)

if(NOT EXISTS "${Lumi_CMAKEDIR}/lumi-targets.cmake")
    set(Lumi_FOUND FALSE)
    set(Lumi_NOT_FOUND_MESSAGE "Lumi installation corrupted: lumi-targets.cmake not found.")
else()
    include("${Lumi_CMAKEDIR}/lumi-targets.cmake")
    set(Lumi_FOUND TRUE)
endif()

if(Lumi_FOUND)
    if(NOT Lumi_FIND_QUIETLY)
        message(STATUS "Found Lumi (installed at ${PACKAGE_PREFIX_DIR})")
        message(STATUS "Lumi Include directories: ${Lumi_INCLUDE_DIRS}")
        message(STATUS "Lumi Library directories: ${Lumi_LIB_DIRS}")
    endif()
else()
    if(Lumi_FIND_REQUIRED)
        message(FATAL_ERROR "Could not find Lumi. ${Lumi_NOT_FOUND_MESSAGE} Please ensure it is installed correctly and its CMake config is discoverable (e.g., via CMAKE_PREFIX_PATH).")
    else()
        if(NOT Lumi_FIND_QUIETLY)
            message(STATUS "Could not find Lumi. ${Lumi_NOT_FOUND_MESSAGE}")
        endif()
    endif()
endif()

mark_as_advanced(
    PACKAGE_PREFIX_DIR
    Lumi_INCLUDE_DIRS
    Lumi_LIB_DIRS
    Lumi_CMAKEDIR
    Lumi_FOUND_COMPONENTS
    Lumi_NOT_FOUND_MESSAGE
)